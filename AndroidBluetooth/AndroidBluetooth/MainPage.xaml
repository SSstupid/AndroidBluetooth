<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AndroidBluetooth.MainPage">

    <ScrollView>
        <VerticalStackLayout>
            <Button Text="BluetoothSearch" Command="{Binding SearchCommand}"/>
            <CollectionView>
              <CollectionView.ItemTemplate>
                <DataTemplate>
                        <Label Text="{Binding DeviceName}" />
                    </DataTemplate>
             </CollectionView.ItemTemplate>
            </CollectionView>
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
